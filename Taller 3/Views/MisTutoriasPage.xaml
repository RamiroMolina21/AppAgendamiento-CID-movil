<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Taller_3.ViewModels"
             xmlns:models="clr-namespace:Taller_3.Models"
             x:Class="Taller_3.Views.MisTutoriasPage"
             x:DataType="viewmodels:MisTutoriasViewModel"
             Title="Mis Tutorías"
             BackgroundColor="#E8F5E9">
    
    <ScrollView>
        <VerticalStackLayout Spacing="0">
            <!-- Banner verde -->
            <VerticalStackLayout BackgroundColor="#2E7D32" 
                                 Padding="20" 
                                 Spacing="5">
                <Label Text="Mis Tutorías" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="White"/>
                <Label Text="Tutorías donde estás asignado como tutor" 
                       FontSize="14" 
                       TextColor="White"/>
            </VerticalStackLayout>

            <!-- Lista de tutorías -->
            <VerticalStackLayout Padding="20" Spacing="15">
                <CollectionView ItemsSource="{Binding Tutorias}" 
                                EmptyView="No hay tutorías agendadas.">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:TutoriaResponseDto">
                            <Border StrokeThickness="1" 
                                    Stroke="#E0E0E0" 
                                    BackgroundColor="White" 
                                    Padding="15" 
                                    Margin="0,0,0,10"
                                    StrokeShape="RoundRectangle 5,5,5,5">
                                <VerticalStackLayout Spacing="10">
                                    <Label Text="{Binding Tema}" 
                                           FontSize="16" 
                                           FontAttributes="Bold" 
                                           TextColor="#2E7D32"/>
                                    <HorizontalStackLayout Spacing="5">
                                        <Image Source="book.png" 
                                               HeightRequest="16" 
                                               WidthRequest="16"/>
                                        <Label Text="{Binding Idioma}" 
                                               FontSize="14" 
                                               TextColor="#757575"/>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="5">
                                        <Image Source="calendar.png" 
                                               HeightRequest="16" 
                                               WidthRequest="16"/>
                                        <Label Text="{Binding FechaTutoria, StringFormat='{0:dd/MM/yyyy HH:mm}'}" 
                                               FontSize="14" 
                                               TextColor="#757575"/>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="10">
                                        <Button Text="Ver Detalle" 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MisTutoriasViewModel}}, Path=VerDetalleCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#2E7D32" 
                                                TextColor="White"
                                                CornerRadius="5"
                                                HorizontalOptions="FillAndExpand"/>
                                        <Button Text="Finalizar" 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MisTutoriasViewModel}}, Path=FinalizarCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#FF9800" 
                                                TextColor="White"
                                                CornerRadius="5"
                                                HorizontalOptions="FillAndExpand"
                                                IsVisible="{Binding Estado, Converter={StaticResource IsPendienteConverter}}"/>
                                    </HorizontalStackLayout>
                                    <Border BackgroundColor="#FF9800" 
                                            StrokeThickness="0"
                                            Padding="10,5"
                                            StrokeShape="RoundRectangle 5,5,5,5"
                                            HorizontalOptions="Start"
                                            Margin="0,5,0,0">
                                        <Label Text="{Binding Estado}" 
                                               TextColor="White"/>
                                    </Border>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
